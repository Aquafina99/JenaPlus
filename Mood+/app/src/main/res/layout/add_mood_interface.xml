<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:rowCount="3"
        android:columnCount="3"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        >


        <ImageView
            android:id="@+id/surprised"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/surprised"
            android:layout_width="96dp"
            android:layout_height="114dp"
            android:background="@color/gridBack"/>

        <ImageView
            android:id="@+id/disgust"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/surprised"
            android:layout_width="96dp"
            android:layout_height="114dp"
            android:background="@color/gridBack2"

            />

        <ImageView
            android:id="@+id/fear"
            android:layout_row="0"
            android:layout_column="2"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fear"
            android:layout_width="96dp"
            android:layout_height="114dp"
            android:background="@color/gridBack"
            />

        <ImageView
            android:id="@+id/confused"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/confused"
            android:layout_width="96dp"
            android:layout_height="114dp"
            android:background="@color/gridBack2"
            />

        <ImageView
            android:id="@+id/happy"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/happy"
            android:layout_width="96dp"
            android:layout_height="114dp"
            android:background="@color/gridBack"
            />

        <ImageView
            android:id="@+id/angry"
            android:layout_row="1"
            android:layout_column="2"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angry"
            android:layout_width="96dp"
            android:layout_height="114dp"
            android:background="@color/gridBack2"
            />

        <ImageView
            android:id="@+id/sad"
            android:layout_row="2"
            android:layout_column="0"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sad"
            android:layout_width="96dp"
            android:layout_height="114dp"
            android:background="@color/gridBack"
            />

        <ImageView
            android:id="@+id/shame"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/shame"
            android:layout_width="96dp"
            android:layout_height="114dp"
            android:background="@color/gridBack2"
            />

        <ImageView
            android:id="@+id/annoyed"
            android:layout_row="2"
            android:layout_column="2"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/annoyed"
            android:layout_width="96dp"
            android:layout_height="114dp"
            android:background="@color/gridBack"
            />

    </GridLayout>

</LinearLayout>